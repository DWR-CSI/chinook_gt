{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/DWR-CSI/Chinook_gt/master/nextflow_schema.json",
    "title": "Chinook pipeline parameters",
    "description": "Schema for the Full GT pipeline parameters",
    "type": "object",
    "$defs": {
        "basic_settings": {
            "title": "Basic Settings",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "project": {
                    "type": "string",
                    "description": "Give a name to this project or run. No spaces or special characters.",
                    "default": "YourProject1",
                    "fa_icon": "fas fa-chart-pie",
                    "pattern": "^[A-Za-z0-9_-]+$"
                },
                "input": {
                    "type": "string",
                    "description": "Path to input FastQ files (must be paired-end)",
                    "default": "az://seqera1/raw_data/ADPH_mushed/*_R{1,2}_concatenated.fastq.gz",
                    "format": "path",
                    "fa_icon": "fas fa-file"
                }
            },
            "required": [
                "project",
                "input"
            ]
        },
        "trimmomatic_settings": {
            "title": "Trimmomatic Settings",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "trim_params": {
                    "type": "string",
                    "description": "Trimmomatic: Trimming parameters",
                    "default": "LEADING:15 TRAILING:15 SLIDINGWINDOW:4:15 MINLEN:36",
                    "fa_icon": "fas fa-cut"
                }
            },
            "required": [
                "trim_params"
            ]
        },
        "flash_settings": {
            "title": "FLASH Settings",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "min_overlap": {
                    "type": "integer",
                    "description": "FLASH2: Minimum overlap length for read merging",
                    "default": 3
                },
                "max_overlap": {
                    "type": "integer",
                    "description": "FLASH2: Maximum overlap length for read merging",
                    "default": 400
                }
            },
            "required": [
                "min_overlap",
                "max_overlap"
            ]
        },
        "rubias_thresholds": {
            "title": "Rubias Thresholds",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "ots28_missing_threshold": {
                    "type": "number",
                    "description": "If less than this much OTS28 data is missing, consider OTS28 data Intermediate instead of uncertain",
                    "default": 0.5,
                    "minimum": 0,
                    "maximum": 1
                },
                "gsi_missing_threshold": {
                    "type": "number",
                    "description": "If more than this much GSI data is missing, consider GSI data invalid",
                    "default": 0.6,
                    "minimum": 0,
                    "maximum": 1
                },
                "pofz_threshold": {
                    "type": "number",
                    "description": "If the maximum PofZ is less than this, consider the result ambiguous",
                    "default": 0.8,
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "required": [
                "ots28_missing_threshold",
                "gsi_missing_threshold",
                "pofz_threshold"
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/basic_settings"
        },
        {
            "$ref": "#/$defs/trimmomatic_settings"
        },
        {
            "$ref": "#/$defs/flash_settings"
        },
        {
            "$ref": "#/$defs/rubias_thresholds"
        }
    ]
}